<Window x:Class="MMo_Network.SetPathWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Путь к игре" Height="219" Width="578" Name="PathGame" WindowStartupLocation="CenterScreen">
    <Grid Height="182">
        <TextBox Height="21" Margin="92,50,0,0" Name="pathBox" VerticalAlignment="Top" HorizontalAlignment="Left" Width="346" />
        <Button Content="Указать путь" Height="23" HorizontalAlignment="Left" Margin="444,48,0,0" Name="SetPathButton" VerticalAlignment="Top" Width="84" Click="SetPathButton_Click" />
        <Label Height="28" HorizontalAlignment="Left" Margin="12,47,0,0" Name="path_text" VerticalAlignment="Top" Width="74" Content="Путь к игре" />
        <Button Content="Сохранить" Height="23" HorizontalAlignment="Left" Margin="328,147,0,0" Name="savePath" VerticalAlignment="Top" Width="75" Click="savePath_Click" />
        <Button Content="Отмена" Height="23" HorizontalAlignment="Left" Margin="420,147,0,0" Name="button1" VerticalAlignment="Top" Width="75" Click="button1_Click" />
        <CheckBox Content="Вы читали правила пользования игрой и принимаете их." Height="16" HorizontalAlignment="Left" Margin="18,91,0,0" Name="license" VerticalAlignment="Top" />
    </Grid>
</Window>
